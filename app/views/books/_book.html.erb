<!--New Book部分-->
<!--@bookをBook.newにする-->
<%= form_with model: Book.new do |f| %>
      <div class='form-group'>
        <%= f.label :title, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_field :title %>
        </div>
      </div>
      <div class='form-group'>
        <%= f.label :opinion, class: 'col-sm-2 control-label' %>
        <div class='col-sm-10'>
          <%= f.text_area :body %>
        </div>
      </div>
      <div class='col-sm-10'>
       <%= f.submit 'Create Book' , class: 'btn btn-success'%>
      </div>
<% end %>